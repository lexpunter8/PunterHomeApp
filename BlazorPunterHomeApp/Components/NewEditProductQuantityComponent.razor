@using BlazorPunterHomeApp.Data;
@using DataModels.Helpers;

@inject  ProductService ProductService

<div class="d-flex flex-column mb-3">
    <form>
      <div class="form-group">
        <label for="exampleFormControlInput1">Hoeveelheid</label>
        <input type="number" class="form-control" @bind="NewProductQuantity.UnitQuantityTypeVolume" id="exampleFormControlInput1" placeholder="100">
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Eenheid </label>
        <select class="form-control" id="exampleFormControlSelect1" @bind="NewProductQuantity.MeasurementType">
          @foreach (var cnt in SelectableUnitQuantityTypes)
            {
                <option value="@cnt">@cnt.GetEnumDescription()</option>
            }
        </select>
      </div>
    </form>
</div>

    <button @onclick="Save" class="btn btn-primary float-right">Toevoegen</button>
    <button @onclick="Cancel" class="btn btn-outlined-primary mr-2 float-right">Cancel</button>
